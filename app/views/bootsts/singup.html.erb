<%= render 'layouts/header' %>
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>

<body>

<div class="container">
  <div class="jumbotron">
  <h1> register </h1>

    <%= form_with scope: :bootsts, url: bootsts_path , local: true do |f| %>
   
    <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :name%>
        </div>
        <div class="col-sm-10">     
         <%= f.text_field :name,placeholder:"name",class:"form-control" %>
        </div>
    </div>
  <br>
  <br>
  <br> 

    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :username%>
        </div>
        <div class="col-sm-10">     
            <%= f.text_field :username,placeholder:"username",class:"form-control" %>
        </div>
    </div>
    <br>
    <br>
    <br>

    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :password%>
        </div>
        <div class="col-sm-10">     
            <%= f.text_field :password,placeholder:"password",class:"form-control" %>
        </div>
    </div>

    <br>
    <br>
    <br>

    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :confimpassword%>
        </div>
        <div class="col-sm-10">     
            <%= f.text_field :confimpassword,placeholder:"confimpassword",class:"form-control" %>
        </div>
    </div>

    <br>
    <br>
    <br>

    <div class="form-group">
        <div class="control-label col-sm-offset-5 col-sm-2">
        <%= f.submit "Singup", class: "btn-size" %>
        </div>    
    </div>
        
    <% end %>


</div>     
</div>


</body>
</html>

